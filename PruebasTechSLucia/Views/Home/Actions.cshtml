            return url;
        }
		function getUrlCreateAutorization() {
			var url = '@Url.Action("preAutorizarPago", "Home")';
			return url;
		}
		function getUrlGetCreateAutorization() {
			var url = '@Url.Action("GetAutorizacion", "Home")';
			return url;
		}
		function getUrlGetSubscription(){
			var url = '@Url.Action("GetSubscripcion", "Home")';
			return url;
		}

		function getUrlVoidTransaction(){
			var url = '@Url.Action("VoidTransaction", "Home")';
			return url;
		}

		function getUrlListTransaction() {
			var url = '@Url.Action("ListTransaction", "Home")';
			return url;
